<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary_color"
    android:orientation="vertical"
    tools:context="com.adelianainggolan.petadoptionapp.activity.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_70sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="35sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Find the best pet and adopt your favourite one"
            android:textSize="17sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_welcome"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_round"
            android:shadowColor="@color/secondary_color"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/pet_cat_splash" />




</RelativeLayout>