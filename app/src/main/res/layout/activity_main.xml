<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fm_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fm_main"/>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:mbn_backgroundBottomColor="@color/dark_primary_color"
        app:mbn_circleColor="@color/secondary_color"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/light_primary_color"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/light_primary_color"
        app:mbn_shadowColor="#1f212121" />
</RelativeLayout>